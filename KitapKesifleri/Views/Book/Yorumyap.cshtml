        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
<textarea class="form-control" placeholder="Yorum" asp-for="Comment"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
